<div class="card mb-2">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group my-1">
        <%= f.label :email , class:"my-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"123@gmail.com"%>
      </div>
      <div class="field form-group my-1">
        <%= f.label :password, class:"my-1" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field form-check my-2">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-secondary mb-1" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
